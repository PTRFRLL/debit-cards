---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import Card from "../card.webp";
const cardCount = 65;
---

<Layout>
  <div class="flex flex-col items-center gap-4">
    <p class="text-center text-2xl">
      My bank keeps sending me the same debit card.<br />
      As of today, I've recieved: <strong>{cardCount} cards</strong>
    </p>
    <p class="text-center text-2xl">
      <strong>3/11/2021 Update:</strong> The cards have stopped coming.
    </p>
  </div>
  <div class="grid grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-5 m-5">
    {Array.from({ length: cardCount }, (_, index) => <Image src={Card} alt="debit card" />)}
  </div>
</Layout>
